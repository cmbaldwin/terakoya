<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h3 class="mb-0"><%= t('terakoya.partners.create_profile') %></h3>
        </div>
        <div class="card-body">
          <%= form_with model: @partner, url: partner_path, method: :post, local: true do |f| %>
            <% if @partner.errors.any? %>
              <div class="alert alert-danger">
                <h5><%= t('errors.messages.not_saved', count: @partner.errors.count, resource: 'Partner') %></h5>
                <ul class="mb-0">
                  <% @partner.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="mb-3">
              <%= f.label :display_name, t('terakoya.partners.display_name'), class: "form-label" %>
              <%= f.text_field :display_name, class: "form-control", required: true, autofocus: true %>
              <div class="form-text"><%= t('terakoya.partners.display_name_help') %></div>
            </div>

            <div class="mb-3">
              <%= f.label :bio, t('terakoya.partners.bio'), class: "form-label" %>
              <%= f.text_area :bio, class: "form-control", rows: 3 %>
            </div>

            <div class="mb-3">
              <%= f.label :goals, t('terakoya.partners.goals'), class: "form-label" %>
              <%= f.text_area :goals, class: "form-control", rows: 3 %>
              <div class="form-text"><%= t('terakoya.partners.goals_help') %></div>
            </div>

            <div class="mb-3">
              <%= f.label :timezone, t('terakoya.partners.timezone'), class: "form-label" %>
              <%= f.select :timezone, ActiveSupport::TimeZone.all.map { |tz| [tz.name, tz.name] },
                  { selected: "UTC" }, class: "form-select" %>
            </div>

            <div class="mb-3">
              <%= f.label :preferred_language, t('terakoya.partners.preferred_language'), class: "form-label" %>
              <%= f.select :preferred_language, [
                [t('terakoya.languages.english'), 'en'],
                [t('terakoya.languages.japanese'), 'ja'],
                [t('terakoya.languages.both'), 'both']
              ], {}, class: "form-select" %>
            </div>

            <div class="d-grid">
              <%= f.submit t('terakoya.partners.create'), class: "btn btn-primary btn-lg" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
