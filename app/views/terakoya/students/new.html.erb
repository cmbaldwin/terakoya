<div class="row justify-content-center">
  <div class="col-md-8 col-lg-6">
    <h1 class="mb-4"><%= t("terakoya.students.new") %></h1>

    <%= form_with model: @student, url: student_path, class: "card" do |f| %>
      <div class="card-body">
        <% if @student.errors.any? %>
          <div class="alert alert-danger">
            <h4 class="alert-heading"><%= pluralize(@student.errors.count, "error") %> prohibited this student from being saved:</h4>
            <ul class="mb-0">
              <% @student.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mb-3">
          <%= f.label :display_name, t("terakoya.students.display_name"), class: "form-label" %>
          <%= f.text_field :display_name, class: "form-control", required: true %>
        </div>

        <div class="mb-3">
          <%= f.label :preferred_language, t("terakoya.students.preferred_language"), class: "form-label" %>
          <%= f.select :preferred_language, [["English", "en"], ["日本語", "ja"], ["Both / 両方", "both"]], {}, class: "form-select" %>
        </div>

        <div class="mb-3">
          <%= f.label :timezone, t("terakoya.students.timezone"), class: "form-label" %>
          <%= f.time_zone_select :timezone, nil, {}, class: "form-select" %>
        </div>

        <div class="mb-3">
          <%= f.label :bio, t("terakoya.students.bio"), class: "form-label" %>
          <%= f.text_area :bio, rows: 4, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :goals, t("terakoya.students.goals"), class: "form-label" %>
          <%= f.text_area :goals, rows: 4, class: "form-control" %>
        </div>

        <div class="d-grid">
          <%= f.submit class: "btn btn-success btn-lg" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
