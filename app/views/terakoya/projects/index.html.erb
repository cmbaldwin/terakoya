<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Projects</h1>
  <%= link_to t("terakoya.projects.new"), new_project_path, class: "btn btn-success" %>
</div>

<% if @projects.any? %>
  <div class="row">
    <% @projects.each do |project| %>
      <div class="col-md-6 col-lg-4 mb-3">
        <div class="card h-100">
          <div class="card-body">
            <h5 class="card-title">
              <%= link_to project.title, project_path(project), class: "text-decoration-none" %>
            </h5>
            <span class="badge badge-<%= project.status %> mb-2">
              <%= t("terakoya.projects.status.#{project.status}") %>
            </span>
            <p class="card-text"><%= project.description %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="alert alert-info">
    <p class="mb-0"><%= t("terakoya.dashboard.no_projects") %></p>
  </div>
<% end %>
