<div class="row justify-content-center">
  <div class="col-md-8 col-lg-6">
    <h1 class="mb-4"><%= t("terakoya.projects.new") %></h1>

    <%= form_with model: @project, class: "card" do |f| %>
      <div class="card-body">
        <% if @project.errors.any? %>
          <div class="alert alert-danger">
            <h4 class="alert-heading"><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h4>
            <ul class="mb-0">
              <% @project.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mb-3">
          <%= f.label :title, t("terakoya.projects.title"), class: "form-label" %>
          <%= f.text_field :title, class: "form-control", required: true %>
        </div>

        <div class="mb-3">
          <%= f.label :description, t("terakoya.projects.description"), class: "form-label" %>
          <%= f.text_area :description, rows: 4, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :goal, t("terakoya.projects.goal"), class: "form-label" %>
          <%= f.text_area :goal, rows: 3, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :deliverable, t("terakoya.projects.deliverable"), class: "form-label" %>
          <%= f.text_area :deliverable, rows: 3, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :target_date, t("terakoya.projects.target_date"), class: "form-label" %>
          <%= f.date_field :target_date, class: "form-control" %>
        </div>

        <div class="d-grid gap-2">
          <%= f.submit class: "btn btn-success" %>
          <%= link_to "Cancel", projects_path, class: "btn btn-secondary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
