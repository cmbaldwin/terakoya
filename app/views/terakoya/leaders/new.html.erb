<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h3 class="mb-0"><%= t('terakoya.leaders.create_profile') %></h3>
        </div>
        <div class="card-body">
          <%= form_with model: @leader, url: leader_path, method: :post, local: true do |f| %>
            <% if @leader.errors.any? %>
              <div class="alert alert-danger">
                <h5><%= t('errors.messages.not_saved', count: @leader.errors.count, resource: 'Leader') %></h5>
                <ul class="mb-0">
                  <% @leader.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="mb-3">
              <%= f.label :display_name, t('terakoya.leaders.display_name'), class: "form-label" %>
              <%= f.text_field :display_name, class: "form-control", required: true, autofocus: true %>
            </div>

            <div class="mb-3">
              <%= f.label :bio, t('terakoya.leaders.bio'), class: "form-label" %>
              <%= f.text_area :bio, class: "form-control", rows: 4 %>
              <div class="form-text"><%= t('terakoya.leaders.bio_help') %></div>
            </div>

            <div class="mb-3">
              <%= f.label :expertise, t('terakoya.leaders.expertise'), class: "form-label" %>
              <%= f.text_field :expertise, class: "form-control", value: @leader.expertise&.join(', ') %>
              <div class="form-text"><%= t('terakoya.leaders.expertise_help') %></div>
            </div>

            <div class="mb-3">
              <%= f.label :timezone, t('terakoya.leaders.timezone'), class: "form-label" %>
              <%= f.select :timezone, ActiveSupport::TimeZone.all.map { |tz| [tz.name, tz.name] },
                  { selected: "UTC" }, class: "form-select" %>
            </div>

            <div class="mb-3">
              <%= f.label :preferred_language, t('terakoya.leaders.preferred_language'), class: "form-label" %>
              <%= f.select :preferred_language, [
                [t('terakoya.languages.english'), 'en'],
                [t('terakoya.languages.japanese'), 'ja'],
                [t('terakoya.languages.both'), 'both']
              ], {}, class: "form-select" %>
            </div>

            <div class="row">
              <div class="col-md-6 mb-3">
                <div class="form-check">
                  <%= f.check_box :accepting_partners, class: "form-check-input" %>
                  <%= f.label :accepting_partners, t('terakoya.leaders.accepting_partners'), class: "form-check-label" %>
                </div>
              </div>

              <div class="col-md-6 mb-3">
                <%= f.label :max_partners, t('terakoya.leaders.max_partners'), class: "form-label" %>
                <%= f.number_field :max_partners, class: "form-control", min: 0 %>
                <div class="form-text"><%= t('terakoya.leaders.max_partners_help') %></div>
              </div>
            </div>

            <div class="d-grid">
              <%= f.submit t('terakoya.leaders.create'), class: "btn btn-success btn-lg" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
