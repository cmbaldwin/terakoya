<div class="container mt-4">
  <!-- Mode Switcher -->
  <div class="row mb-4">
    <div class="col">
      <div
        data-controller="mode-switcher"
        data-mode-switcher-current-mode-value="partner"
        data-mode-switcher-switch-url-value="<%= switch_mode_path %>"
      >
        <div class="btn-group" role="group">
          <button
            type="button"
            class="btn btn-outline-primary active"
            data-mode-switcher-target="button"
            data-mode="partner"
            data-action="click->mode-switcher#switch"
          >
            <%= t('terakoya.modes.partner') %>
          </button>
          <% if current_leader %>
            <button
              type="button"
              class="btn btn-outline-primary"
              data-mode-switcher-target="button"
              data-mode="leader"
              data-action="click->mode-switcher#switch"
            >
              <%= t('terakoya.modes.leader') %>
            </button>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Welcome Section -->
  <div class="row mb-4">
    <div class="col">
      <h1><%= t('terakoya.dashboard.welcome', name: @partner.display_name) %></h1>
      <p class="lead text-muted"><%= t('terakoya.dashboard.partner_subtitle') %></p>
    </div>
  </div>

  <!-- Quick Stats -->
  <div class="row mb-4">
    <div class="col-md-3 mb-3">
      <div class="card text-center">
        <div class="card-body">
          <h3 class="mb-0"><%= @classes.count %></h3>
          <small class="text-muted"><%= t('terakoya.dashboard.my_classes') %></small>
        </div>
      </div>
    </div>
    <div class="col-md-3 mb-3">
      <div class="card text-center">
        <div class="card-body">
          <h3 class="mb-0"><%= @upcoming_events.count %></h3>
          <small class="text-muted"><%= t('terakoya.dashboard.upcoming_events') %></small>
        </div>
      </div>
    </div>
    <div class="col-md-3 mb-3">
      <div class="card text-center">
        <div class="card-body">
          <h3 class="mb-0"><%= @pending_bookings.count %></h3>
          <small class="text-muted"><%= t('terakoya.dashboard.pending_bookings') %></small>
        </div>
      </div>
    </div>
    <div class="col-md-3 mb-3">
      <div class="card text-center">
        <div class="card-body">
          <%= link_to calendar_path, class: "text-decoration-none" do %>
            <h3 class="mb-0">ðŸ“…</h3>
            <small class="text-muted"><%= t('terakoya.dashboard.view_calendar') %></small>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <!-- My Classes -->
    <div class="col-md-6 mb-4">
      <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h5 class="mb-0"><%= t('terakoya.dashboard.my_classes') %></h5>
          <%= link_to t('terakoya.classes.browse'), terakoya_classes_path, class: "btn btn-sm btn-primary" %>
        </div>
        <div class="card-body">
          <% if @classes.any? %>
            <div class="list-group list-group-flush">
              <% @classes.each do |klass| %>
                <%= link_to terakoya_class_path(klass), class: "list-group-item list-group-item-action" do %>
                  <div class="d-flex w-100 justify-content-between">
                    <h6 class="mb-1"><%= klass.name %></h6>
                    <small class="text-muted"><%= klass.current_members %> <%= t('terakoya.classes.members') %></small>
                  </div>
                  <p class="mb-1 text-muted"><%= truncate(klass.description, length: 100) %></p>
                  <small><%= t('terakoya.classes.leader') %>: <%= klass.leader.display_name %></small>
                <% end %>
              <% end %>
            </div>
          <% else %>
            <p class="text-muted"><%= t('terakoya.dashboard.no_classes') %></p>
            <%= link_to t('terakoya.classes.browse'), terakoya_classes_path, class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Upcoming Events -->
    <div class="col-md-6 mb-4">
      <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h5 class="mb-0"><%= t('terakoya.dashboard.upcoming_events') %></h5>
          <%= link_to t('terakoya.calendar.view_all'), calendar_path, class: "btn btn-sm btn-outline-primary" %>
        </div>
        <div class="card-body">
          <% if @upcoming_events.any? %>
            <ul class="list-group list-group-flush">
              <% @upcoming_events.each do |event| %>
                <li class="list-group-item">
                  <div class="d-flex justify-content-between align-items-start">
                    <div>
                      <h6 class="mb-1"><%= event.title %></h6>
                      <small class="text-muted">
                        <%= l(event.start_time, format: :short) %>
                        <% if event.location.present? %>
                          <br><%= event.location %>
                        <% end %>
                      </small>
                    </div>
                    <span class="badge bg-<%= event_status_color(event.status) %>">
                      <%= t("terakoya.events.status.#{event.status}") %>
                    </span>
                  </div>
                </li>
              <% end %>
            </ul>
          <% else %>
            <p class="text-muted"><%= t('terakoya.dashboard.no_upcoming_events') %></p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
